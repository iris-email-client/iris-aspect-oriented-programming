<configurationModel>
    <configuration>
        <expression>iris</expression>
        <transformation>
            <name>selectAllComponents</name>
	    <args>-</args>
        </transformation>
        <transformation>
          <name>createPropertyFile</name>
          <args>persistenceProperties</args>
        </transformation>
	<transformation>
          <name>createPropertyFile</name>
          <args>persistencePropertiesTest</args>
        </transformation>
    </configuration>
    <configuration>
      <expression>Not(addressBook)</expression>
       <transformation>
            <name>removeComponents</name>
	    <args>addressBookAspect, addressBookFacade, addressBookModel, addressBookCommand, addressBookTest, addressBookDAOTest,addressBookDAOLucene,addressBookDAOSQLite,sqliteCodeAddressBookDAOFactory,luceneCodeAddressBookDAOFactory</args>
        </transformation>
    </configuration>
    <configuration>
      <expression>Not(tagging)</expression>
       <transformation>
            <name>removeComponents</name>
	    <args>tagCommand, tagManager, tagModel, tagDAO, tagDAOSQLite, tagDAOLucene, tagDAOLuceneTest, tagDAOTest, sqliteCodeTagDAOFactory, luceneCodeTagDAOFactory</args>
        </transformation>
    </configuration>
    <configuration>     
    <expression>relational</expression>
       <transformation>
          <name>setPropertyInFile</name>
          <args>persistenceProperties,factory,br.unb.cic.iris.persistence.sqlite3.SQLiteDAOFactory</args>
        </transformation>
        <transformation>
          <name>setPropertyInFile</name>
          <args>persistencePropertiesTest,factory,br.unb.cic.iris.persistence.sqlite3.SQLiteDAOFactory</args>
        </transformation>
	<transformation>
            <name>removeComponents</name>
	    <args>luceneCode,luceneCodeFactory, luceneTest, luceneCodeTagFactory</args>
        </transformation>
    </configuration>
    <configuration>
     <expression>nonRelational</expression>
       <transformation>
          <name>setPropertyInFile</name>
          <args>persistenceProperties,factory,br.unb.cic.iris.persistence.lucene.LuceneDAOFactory</args>
        </transformation>
	<transformation>
          <name>setPropertyInFile</name>
          <args>persistencePropertiesTest,factory,br.unb.cic.iris.persistence.lucene.LuceneDAOFactory</args>
        </transformation>
       <transformation>
            <name>removeComponents</name>
	    <args>sqliteCode, sqliteCodeFactory, sqliteTest, tagDAOTest, sqliteCodeTagFactory</args>
        </transformation>
    </configuration>
</configurationModel>
