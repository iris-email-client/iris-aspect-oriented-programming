<configurationModel>
    <configuration>
        <expression>iris</expression>
        <transformation>
            <name>selectAllComponents</name>
	    <args>-</args>
        </transformation>
        <transformation>
          <name>createPropertyFile</name>
          <args>persistenceProperties</args>
        </transformation>
	<transformation>
          <name>createPropertyFile</name>
          <args>persistencePropertiesTest</args>
        </transformation>
    </configuration>
    <configuration>
      <expression>Not(addressBook)</expression>
       <transformation>
            <name>removeComponents</name>
	    <args>addressBookFeature, addressBookCommand, addressBookTest, addressBookDAOTest,addressBookDAOLucene,addressBookDAOSQLite</args>
        </transformation>
    </configuration>
    <configuration>
      <expression>Not(tagging)</expression>
       <transformation>
            <name>removeComponents</name>
	    <args>tagCommand, tagManager, tagModel, tagDAO, tagDAOSQLite, tagDAOLucene, tagDAOLuceneTest, tagDAOTest, sqliteCodeTagDAOFactory, luceneCodeTagDAOFactory</args>
        </transformation>
    </configuration>
    <configuration>     
    <expression>relational</expression>
       <transformation>
          <name>setPropertyInFile</name>
          <args>persistenceProperties,factory,sqlite3</args>
        </transformation>
        <transformation>
          <name>setPropertyInFile</name>
          <args>persistencePropertiesTest,factory,sqlite3</args>
        </transformation>
	<transformation>
            <name>removeComponents</name>
	    <args>luceneCode,luceneCodeFactory, luceneTest, luceneCodeTagFactory, addressBookDAOLucene</args>
        </transformation>
    </configuration>
    <configuration>
     <expression>nonRelational</expression>
       <transformation>
          <name>setPropertyInFile</name>
          <args>persistenceProperties,factory,lucene</args>
        </transformation>
	<transformation>
          <name>setPropertyInFile</name>
          <args>persistencePropertiesTest,factory,lucene</args>
        </transformation>
       <transformation>
            <name>removeComponents</name>
	    <args>sqliteCode, sqliteCodeFactory, sqliteTest, tagDAOTest, sqliteCodeTagFactory, addressBookDAOSQLite</args>
        </transformation>
    </configuration>
</configurationModel>
